{  
    "name": "Rust Dev Container",  
    "image": "mcr.microsoft.com/devcontainers/rust:latest",  
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached",
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
    ],
    "remoteEnv": {
        "GIT_AUTHOR_NAME": "${localEnv:GIT_AUTHOR_NAME}",
        "GIT_AUTHOR_EMAIL": "${localEnv:GIT_AUTHOR_EMAIL}",
        "GIT_COMMITTER_NAME": "${localEnv:GIT_COMMITTER_NAME}",
        "GIT_COMMITTER_EMAIL": "${localEnv:GIT_COMMITTER_EMAIL}"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "rust-analyzer.cargo.runBuildScripts": true
            },
            "extensions": [  
                "rust-lang.rust-analyzer",
                "ms-vscode.vscode-docker",
                "github.vscode-github-actions",
                "redhat.vscode-yaml",
                "swellaby.vscode-rust-test-adapter",
                "serayuzgur.crates",
                "tamasfe.even-better-toml",
                "vadimcn.vscode-lldb"
            ]
        }
    },
    "postCreateCommand": "sudo chown -R vscode:vscode /home/vscode/.ssh && sudo chmod 600 /home/vscode/.ssh/id_rsa"
}
